{
    "name": "mvlabs/mvlabs-snappy",
    "description": "MvlabsSnappy is a Zend Framework module that allow easy to thumbnail, snapshot or PDF generation from a url or a html page using Snappy PHP wrapper for the  wkhtmltopdf/wkhtmltoimage conversion utility.",
    "license": "MIT",
    "type": "zf3-module",
    "keywords": [
        "snappy",
        "wkhtmltopdf",
        "wkhtmltoimage", 
        "pdf", 
        "thumbnail", 
        "snapshot", 
        "MvLabs",
        "zf2",
        "zf3"
    ],
    "homepage": "https://github.com/mvlabs/MvlabsSnappy.git",
    "authors": [
        {
            "name": "Diego Drigani",
            "email": "d.drigani@mvlabs.it",
            "homepage": "http://www.mvlabs.it/en/"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-servicemanager": "^3.1",
        "knplabs/knp-snappy": "^1.0"
    },    
    "autoload": {
        "psr-4": {
            "MvlabsSnappy\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^5.7.14",
        "zendframework/zend-mvc": "^3.0.1",
        "zendframework/zend-coding-standard": "~1.0.0",
        "composer/composer": ">=1.0.0-alpha10",
        "zfcampus/zf-development-mode": "^3.1",
        "filp/whoops": "^2.1.12",
        "zendframework/zend-test": "^3.2"
    },
    "autoload-dev": {
        "psr-4": {
            "MvlabsSnappyTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
